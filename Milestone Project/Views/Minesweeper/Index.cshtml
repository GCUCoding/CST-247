@model Milestone_Project.Models.GameLogic.Board

<style>
    .game-bttn {
        align-content: center;
        width: 50px;
    }

    .game-bttn-image {
        padding: 2px;
        align-content: center;
        width: 50px;
    }

    .bttn-zone {
        align-content: center;
        display: flex;
        flex-wrap: wrap;
        float: left;
    }

    .line-break {
        flex-basis: 100%;
        height: 0;
    }

    .bttn-label {
        font-size: 8px;
        text-align: center;
    }
    @*.game-button-image {
        align-content: center;
        float: left;
        width: 90px;
    }*@

    @*.game-button {
        width: 100px;
        height: 100px;
        float: left;
        padding: 2px;
        display: inline-flex;
        flex-wrap: wrap;
    }*@

    @*.button-zone {
        align-content: center;
        display: grid;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
    }*@

    @*.line-break {
        flex-basis: 100%;
        height: 0;
    }*@
</style>
<form>
    @for (int i = 0; i < Model.Size; i++)
    {
        @for (int j = 0; j < Model.Size; j++)
        {
            @for (int k = 0; k < 10; k++)
            {
                <div class="bttn-zone">
                    @if (Model.Grid[i, j].Visited)
                    {

                    if (Model.Grid[i, j].Live)
                    {
                        <button class="game-button" type="submit" value="@i,@j"
                                name="coords" asp-controller="Minesweeper" asp-action="HandleButtonClick">

                            <img class="game-button" src="~/Pictures/purpleBomb.png" />
                        </button>
                    }
                    else
                    {
                        <button class="game-button" type="submit" value="@i,@j"
                                name="coords" asp-controller="Minesweeper" asp-action="HandleButtonClick">

                                <img class="game-bttn-image" src="~/Pictures/purpleGrassBlock.jpg" />
                            </button>
                        }
                    }
                    else
                    {
                        <button class="game-bttn" type="submit" value="@i@j"
                                name="coords" asp-controller="Minesweeper" asp-action="HandleButtonClick">

                            <img class="game-bttn-image" src="~/Pictures/grassBlock.png" />
                        </button>
                    }
                </div>
            }
            <br class="line-break" />
        }
        <br />
    }
</form>